@model ICollection<CustomerListViewModel>

@{
    int str = 0;
}
<div style="text-align:center">
    <h2>Customer List</h2>
</div>
<div style="text-align:end ; margin:10px">
    <a asp-action="Create" class="btn btn-primary">Add Customer</a>
</div>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr class="table-success">
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Action</th>"

        </tr>
    </thead>
    <tbody>
        @foreach (var cus in Model)
        {
            <tr>
                <td>@(++str)</td>
                <td>@cus.Name</td>
                <td>@cus.Email</td>
                <td>@cus.PhoneNumber</td>
<td>
                    <a asp-action="Details" asp-route-id="@cus.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@cus.Id" class="btn btn-success btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@cus.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
            </tr>
        }

    </tbody>
</table>