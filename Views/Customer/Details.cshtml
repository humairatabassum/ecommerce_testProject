@model CustomerListViewModel

    <h2 style="padding:15px">Customer Details</h2>

    <div class="card" style="box-shadow: 5px 5px 5px grey; width: 750px">

    <table class="table table-info table-bordered table-striped "  style="text-align:center ; width:750px">
     <tr>
         <th colspan="2" style="text-align:center; font-size:22px">Profile Information</th>
     </tr>

    <tr>
        <th>Name</th>
        <td>@Model.Name</td>
    </tr>

    <tr>
        <th>Phone</th>
        <td>@Model.PhoneNumber</td>
    </tr>

    <tr >
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>

    <tr >
        <th>Country</th>
        <td>@Model.Country</td>
    </tr >

    <tr >
        <th>City</th>
        <td>@Model.City</td>
    </tr>


    </table>

    <div style="padding:5px ; margin:8px 8px 20px 8px" >
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-info">Update</a>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
        <div style="text-align:right">
            <a asp-action="Index" class="btn btn-outline-primary">Back</a>
        </div>
        </div>
    </div>
